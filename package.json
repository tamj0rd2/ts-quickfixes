{
  "name": "ts-quickfixes",
  "private": true,
  "displayName": "TS QuickFixes",
  "description": "Quick fixes for typescript",
  "version": "1.0.0",
  "license": "MIT",
  "publisher": "tamj0rd2",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tamj0rd2/ts-quickfixes.git"
  },
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "npm run lint:base -- src --ext ts",
    "lint:base": "eslint --color --ignore-path .gitignore --cache",
    "watch": "tsc -p ./tsconfig.json --watch",
    "pretest": "npm run compile",
    "test": "run-s test:unit test:e2e",
    "test:unit": "cross-env TEST_MODE=unit jest",
    "test:e2e": "cross-env TEST_MODE=e2e node ./out/test/runTest.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:base -- --fix"
    ]
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.1.1",
    "@types/glob": "^7.1.3",
    "@types/node": "^12.19.3",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "commitizen": "^4.2.2",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "glob": "^7.1.6",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lint-staged": "^10.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "strip-ansi": "^6.0.0",
    "ts-jest": "^26.4.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "vscode-test": "^1.4.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "bugs": {
    "url": "https://github.com/tamj0rd2/ts-quickfixes/issues"
  },
  "homepage": "https://github.com/tamj0rd2/ts-quickfixes#readme",
  "dependencies": {},
  "keywords": [],
  "author": ""
}
